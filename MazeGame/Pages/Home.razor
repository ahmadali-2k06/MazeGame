@page "/"
@layout Layout.EmptyLayout

<main class="flex-grow flex flex-col relative w-full items-center justify-center overflow-hidden h-screen bg-landing-dark text-white font-mono selection:bg-primary selection:text-white">

    <div class="absolute inset-0 z-0 bg-grid-pattern bg-[length:40px_40px] opacity-20 pointer-events-none animate-grid-move"></div>
    <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-primary rounded-full blur-[2px] opacity-40 animate-float" style="animation-delay: 0s"></div>
    <div class="absolute bottom-1/3 right-1/4 w-1.5 h-1.5 bg-primary rounded-full blur-[1px] opacity-30 animate-float" style="animation-delay: 2s"></div>
    <div class="absolute top-2/3 left-1/3 w-1 h-1 bg-primary rounded-full blur-[1px] opacity-50 animate-float" style="animation-delay: 4s"></div>
    <div class="absolute inset-0 z-0 bg-gradient-to-t from-background-dark via-transparent to-background-dark opacity-90 pointer-events-none"></div>
    <div class="absolute inset-0 z-0 bg-gradient-to-r from-background-dark via-transparent to-background-dark opacity-80 pointer-events-none"></div>

    <div class="flex h-full w-full flex-col z-10 relative">
        <div class="flex flex-1 justify-center items-center py-5 px-4 md:px-10">
            <div class="flex flex-col max-w-[960px] flex-1 items-center justify-center">

                <div class="mb-8 p-4 rounded-full border border-primary/20 bg-primary/5 backdrop-blur-sm animate-float">
                    <span class="material-symbols-outlined text-primary text-5xl md:text-6xl drop-shadow-[0_0_8px_rgba(41,168,71,0.6)]">
                        hub
                    </span>
                </div>

                <div class="flex flex-col gap-6 text-center items-center">
                    <h1 class="text-white text-6xl md:text-8xl lg:text-9xl font-black leading-none tracking-tighter animate-glow-pulse">
                        <span class="text-primary">ALGO</span>MAZE
                    </h1>

                    <div class="flex items-center gap-3 w-fit mx-auto">
                        <span class="h-[1px] w-8 md:w-16 bg-primary/50 hidden md:block"></span>
                        <div class="inline-block">
                            <h2 class="typewriter-text animate-typewriter text-gray-300 text-sm md:text-lg lg:text-xl font-medium tracking-[0.2em] uppercase font-mono max-w-full">
                                BFS &amp; DFS Visualizer
                            </h2>
                        </div>
                        <span class="h-[1px] w-8 md:w-16 bg-primary/50 hidden md:block"></span>
                    </div>

                    <div class="h-8 md:h-12"></div>

                    <button class="group relative flex items-center justify-center overflow-hidden rounded-lg border-2 border-primary bg-transparent px-8 py-4 transition-all duration-300 hover:bg-primary/10 hover:shadow-[0_0_30px_rgba(41,168,71,0.6)] hover:border-primary-glow focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background-dark animate-button-pulse-init">

                        <NavLink href="visualizer" class="absolute inset-0 z-10 w-full h-full"></NavLink>

                        <div class="absolute inset-0 w-0 bg-primary transition-all duration-[250ms] ease-out group-hover:w-full opacity-10"></div>
                        <span class="relative flex items-center gap-3 text-primary font-bold text-lg tracking-widest group-hover:text-primary-glow transition-colors duration-300 font-mono">
                            <span class="material-symbols-outlined text-xl transition-transform duration-300 group-hover:rotate-12">terminal</span>
                            [ ENTER VISUALIZER ]
                        </span>
                    </button>

                </div>
            </div>
        </div>
    </div>
    <footer class="relative z-10 w-full border-t border-white/5 bg-background-dark/50 backdrop-blur-sm">
    <div class="flex flex-col justify-center items-center py-6 px-4">
        <p class="text-gray-500 dark:text-gray-400 text-xs md:text-sm font-normal tracking-wide text-center font-mono">
            © 2025<span class="text-primary/80 hover:text-primary cursor-pointer transition-colors duration-300 hover:underline decoration-primary underline-offset-4">[Algomaze.]</span>
        </p>
    </div>
</footer>
</main>